<mvc:View controllerName="de.sapui5buch.demo.controller.App"
  xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
  xmlns="sap.m"
  xmlns:uxap="sap.uxap"
  xmlns:core="sap.ui.core"
  xmlns:layout="sap.ui.layout">
  <Shell id="shell">
    <App id="idAppControl">
      <pages>
        <uxap:ObjectPageLayout id="ObjectPageLayout" showHeaderContent="false" toggleHeaderOnTitleClick="false">
          <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
              <uxap:heading>
                <Input id="idInputField" value="{page>/person}" width="20rem" showSuggestion="true" suggest="onSuggest" suggestionItems="{/d/results}">
                  <suggestionItems>
                    <core:Item text="{BusinessPartnerID} {CompanyName}"/>
                  </suggestionItems>
                </Input>
              </uxap:heading>
            </uxap:ObjectPageDynamicHeaderTitle>
          </uxap:headerTitle>
        </uxap:ObjectPageLayout>
      </pages>
    </App>
  </Shell>
</mvc:View>
